<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="info.chitanka.android.ui.ReadersActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:id="@+id/left"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_alreader"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatTextView
                    style="@style/reader_text"
                    android:text="Alreader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/left"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_coolreader"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatTextView
                    style="@style/reader_text"
                    android:text="CoolReader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_left"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/left"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_ebookdroid"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatTextView
                    style="@style/reader_text"
                    android:text="EbookDroid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_right"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/bottom_left"
                android:layout_below="@+id/right"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_fbreader"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/reader_text"
                    android:text="FbReader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
